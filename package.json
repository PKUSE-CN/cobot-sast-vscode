{
    "name": "cobot-sast-vscode",
    "displayName": "库博静态代码分析工具",
    "description": "CoBOT V4.3是由北京北大软件工程发展有限公司研发的一种程序静态分析工具，采用全新的静态分析框架，可以有效地降低误报率和漏报率。",
    "version": "1.0.3",
    "publisher": "PKUSE",
    "engines": {
        "vscode": "^1.64.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:*"
    ],
    "main": "./dist/extension.js",
    "icon": "images/logo-cobot.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/PKUSE-CN/cobot-sast-vscode"
    },
    "contributes": {
        "commands": [
            {
                "command": "cobot-sast-vscode.checkResult.refresh",
                "category": "库博静态代码分析工具",
                "title": "刷新检测结果",
                "icon": "$(refresh)"
            },
            {
                "command": "cobot-sast-vscode.checkResult.checkProject",
                "title": "cobot: 检测项目"
            },
            {
                "command": "cobot-sast-vscode.checkResult.filterResultEditor",
                "title": "cobot: 筛选当前编辑器文件结果"
            },
            {
                "command": "cobot-sast-vscode.checkResult.filterResultExplorer",
                "title": "cobot: 筛选文件资源管理器结果"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cobot",
                    "title": "库博静态代码分析工具",
                    "icon": "images/cobot_logo_svg.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "cobot-sast-vscode.checkResult.refresh",
                    "when": "view == checkResult",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "cobot-sast-vscode.checkResult.filterResultEditor",
                    "group": "menu"
                }
            ],
            "explorer/context": [
                {
                    "command": "cobot-sast-vscode.checkResult.filterResultExplorer",
                    "group": "menu",
                    "when": "!explorerResourceIsFolder"
                },
                {
                    "command": "cobot-sast-vscode.checkResult.checkProject",
                    "group": "menu",
                    "when": "explorerResourceIsFolder"
                }
            ]
        },
        "views": {
            "cobot": [
                {
                    "id": "info",
                    "name": "项目信息",
                    "visibility": "collapsed"
                },
                {
                    "id": "checkResult",
                    "name": "检测结果"
                },
                {
                    "id": "setting",
                    "name": "项目配置",
                    "visibility": "collapsed"
                }
            ]
        },
        "configuration": {
            "title": "库博静态代码分析工具",
            "properties": {
                "cobot-sast-vscode.url": {
                    "type": "string",
                    "default": "",
                    "description": "库博静态代码分析工具服务端地址"
                },
                "cobot-sast-vscode.token": {
                    "type": "string",
                    "default": "",
                    "description": "库博静态代码分析工具密钥"
                },
                "cobot-sast-vscode.projectName": {
                    "type": "string",
                    "default": "",
                    "description": "当前检测项目名称"
                },
                "cobot-sast-vscode.projectPath": {
                    "type": "string",
                    "default": "",
                    "description": "当前检测项目路径"
                }
            }
        },
        "colors": [
            {
                "id": "level.fatal",
                "description": "严重等级颜色: 致命",
                "defaults": {
                    "dark": "#701212",
                    "light": "#701212"
                }
            },
            {
                "id": "level.critical",
                "description": "严重等级颜色: 严重",
                "defaults": {
                    "dark": "#c53030",
                    "light": "#c53030"
                }
            },
            {
                "id": "level.important",
                "description": "严重等级颜色: 重要",
                "defaults": {
                    "dark": "#fc5d5d",
                    "light": "#fc5d5d"
                }
            },
            {
                "id": "level.minor",
                "description": "严重等级颜色: 次要",
                "defaults": {
                    "dark": "#ffaa33",
                    "light": "#ffaa33"
                }
            },
            {
                "id": "level.hint",
                "description": "严重等级颜色: 提示",
                "defaults": {
                    "dark": "#d5c828",
                    "light": "#d5c828"
                }
            },
            {
                "id": "level.required",
                "description": "严重等级颜色: 强制",
                "defaults": {
                    "dark": "#4a90e2",
                    "light": "#4a90e2"
                }
            },
            {
                "id": "level.suggestion",
                "description": "严重等级颜色: 建议",
                "defaults": {
                    "dark": "#83d232",
                    "light": "#83d232"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/archiver": "^5.3.2",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/tmp": "^0.2.3",
        "@types/vscode": "^1.64.2",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.36.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.76.3",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "axios": "^1.3.6",
        "form-data": "^4.0.0",
        "tmp": "^0.2.1",
        "ws": "^8.13.0"
    }
}